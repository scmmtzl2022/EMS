.form-group.form-wrapper.mb-300
  h1 Edit Employee Information
  div
    .img.mv-20.profile
        ==image
  =form_for model do |f|
    div
      =f.label :name, class:" col-form-label"
      =f.text_field :name, class:"form-control"
      - if model.errors[:name].any?
          .error-msg Name  #{ model.errors[:name][0] }
    div
      =f.label :email, class:" col-form-label"
      =f.text_field :email, class:"form-control"
      - if model.errors[:email].any?
          .error-msg Email  #{ model.errors[:email][0] }
    - if admin?
      div
        =f.label :role, "Role", class:" col-form-label"
        = f.select(:role, options_for_select(Constants::TYPES, selected: model.role.to_i),{}, {:class => "form-control"})
    div
      =f.label :phone, class:" col-form-label"
      =f.text_field :phone, class:"form-control"
      - if model.errors[:phone].any?
          .error-msg Phone  #{ model.errors[:phone][0] }
    div
      =f.label :position, class:" col-form-label"
      =f.text_field :position, class:"form-control"
      - if model.errors[:position].any?
          .error-msg Position  #{ model.errors[:position][0] }
    div
      =f.label :skill, class:" col-form-label"
      =f.text_field :skill, class:"form-control"
      - if model.errors[:skill].any?
          .error-msg skill  #{ model.errors[:skill][0] }
    div
      =f.label :language, class:" col-form-label"
      =f.text_field :language, class:"form-control"
      - if model.errors[:language].any?
          .error-msg Language  #{ model.errors[:language][0] }
    div
      =f.label :gender, class:" col-form-label"
      =f.text_field :gender, class:"form-control"
      - if model.errors[:gender].any?
          .error-msg gender  #{ model.errors[:gender][0] }
    div
      =f.label :iq, class:" col-form-label"
      =f.text_field :iq, class:"form-control"
      - if model.errors[:iq].any?
          .error-msg IQ  #{ model.errors[:iq][0] }
    div
      =f.label :nrc_no, class:" col-form-label"
      =f.text_field :nrc_no, class:"form-control"
      - if model.errors[:nrc_no].any?
          .error-msg nrc_no  #{ model.errors[:nrc_no][0] }
    div
      =f.label :marital_status, class:" col-form-label"
      =f.text_field :marital_status, class:"form-control"
