          .error-msg card_id  #{ model.errors[:card_id][0] }
    div
      =f.label :pc_number, class:" col-form-label"
      =f.text_field :pc_number, class:"form-control"
      - if model.errors[:pc_number].any?
          .error-msg pc_number  #{ model.errors[:pc_number][0] }
    div
      =f.label :bank_account, class:" col-form-label"
      =f.text_field :bank_account, class:"form-control"
      - if model.errors[:bank_account].any?
          .error-msg bank_account  #{ model.errors[:bank_account][0] }
    div
      =f.label :religion, class:" col-form-label"
      =f.text_field :religion, class:"form-control"
      - if model.errors[:religion].any?
          .error-msg religion  #{ model.errors[:religion][0] }
    div
      =f.label :SSB_number, class:" col-form-label"
