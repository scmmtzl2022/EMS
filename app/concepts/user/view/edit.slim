    div
        =f.label :employment_type, "Employment Type", class:" col-form-label"
        = f.select(:employment_type, options_for_select(Constants::EMPLOYMENTTYPES),{}, {:class => "form-control"})
    div
        =f.label :department, "Department", class:" col-form-label"
        = f.select(:department, options_for_select(Constants::DEPARTMENTS),{}, {:class => "form-control"})
    div
      =f.label :university, class:" col-form-label"
      =f.text_area :university, class:"form-control"
      - if model.errors[:university].any?
